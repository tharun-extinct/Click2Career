{
  "servers": {
    "playwright": {
      "command": "npx",
      "args": [
        "-y", 
        "@playwright/mcp@latest", 
        "--browser", "msedge",
        "--user-data-dir", "C:/Users/tharu/AppData/Local/Microsoft/Edge/User Data",
        "--output-dir",
        "X:/AI_and_Automation/Click2Career/assets/playwright"
      ]
    },
    
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "dotenv-cli",
        "-e",
        ".env",
        "--",
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ],
      "env": {
        "CONTEXT7_TIMEOUT": "30000",
        "DEBUG": "*"
      }
    },

    "knowledge-graph-memory": {
      "command": "npx",
      "args": [
        "-y", 
        "@modelcontextprotocol/server-memory"],
      "env": {
        "MEMORY_FILE_PATH": "X:/AI_and_Automation/Job-Application-automation/.vscode/memory.jsonl"
      }
    },

    "google-workspace": {
      "command": "mcp-server-google-workspace",
      "args": [],
      "env": {
        "GOOGLE_CLIENT_ID": "YOUR_GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET": "YOUR_GOOGLE_CLIENT_SECRET",
        "GOOGLE_REFRESH_TOKEN": "YOUR_GOOGLE_REFRESH_TOKEN",
        "GOOGLE_ACCESS_TOKEN": ""                                         // optional
      }
    },
    
    "rube": {
      "command": "mcp-remote",
      "args": ["https://rube.app/mcp"]
    }
  }
}